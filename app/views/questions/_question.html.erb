<% question ||= nil %>
<% action_icon = question.answer.blank? ? 'reply' : 'pencil-alt' %>

<div class="question">
  <div class="question-content">
    <div class="question-text text-lead">
      <%= question.text %>
    </div>

    <% if question.answer.present? %>
      <div class="question-answer text-lead">
        <%= question.answer if question.answer.present? %>
      </div>
    <% end %>

    <div class="question-author">
      <% if question.author.present? %>
        <p>Вопрос задал: <%= link_to question.author.username, user_path(question.author) %></p>
      <% else %>
        <%= 'Анонимный пользователь' %>
      <% end %>
    </div>

    <div class="question-date">
      <%= l(question.created_at, format: :short) %>
    </div>
  </div>

  <% if question.user == current_user %>
    <div class="question-actions">
      <%= link_to fa_icon(action_icon), edit_question_path(question) %>
      <%= link_to fa_icon('trash-alt'), question_path(question), method: :delete, data: { confirm: "Точно удалить вопрос?" } %>
    </div>
  <% end %>
</div>